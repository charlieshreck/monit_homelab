{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard - Monitoring Cluster",
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "platformAutomerge": true,
  "minimumReleaseAge": "3 days",
  "internalChecksFilter": "strict",
  "prCreation": "not-pending",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "kubernetes": {
    "fileMatch": ["kubernetes/.+\\.ya?ml$"]
  },
  "packageRules": [
    {
      "description": "Auto-merge patch and minor updates after stability period",
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      "description": "Require review for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update"]
    },
    {
      "description": "Group monitoring platform updates",
      "matchManagers": ["kubernetes"],
      "matchFileNames": ["kubernetes/platform/**"],
      "groupName": "monitoring-platform"
    },
    {
      "description": "Group monitoring application updates",
      "matchManagers": ["kubernetes"],
      "matchFileNames": ["kubernetes/applications/**"],
      "groupName": "monitoring-apps"
    },
    {
      "description": "Group Terraform updates",
      "matchManagers": ["terraform"],
      "groupName": "terraform"
    },
    {
      "description": "Group Ansible updates",
      "matchManagers": ["ansible", "ansible-galaxy"],
      "groupName": "ansible"
    },
    {
      "description": "Group Coroot components",
      "matchPackagePatterns": ["^ghcr\\.io/coroot/"],
      "groupName": "coroot-images"
    }
  ],
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "timezone": "UTC",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 0,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "rebaseWhen": "behind-base-branch",
  "labels": ["dependencies", "renovate"],
  "assignees": ["@charlieshreck"]
}
