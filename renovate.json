{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dockerfile": {
    "enabled": true
  },
  "docker": {
    "enabled": true,
    "major": {
      "enabled": false
    }
  },
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "matchPaths": ["docker/mcp-servers/**/Dockerfile"],
      "groupName": "MCP Server npm packages",
      "automerge": false,
      "labels": ["dependencies", "mcp-servers"]
    },
    {
      "matchDatasources": ["docker"],
      "matchPaths": ["kubernetes/platform/mcp-servers/**/*.yaml"],
      "groupName": "MCP Server Docker images",
      "automerge": true,
      "labels": ["dependencies", "docker"]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPaths": ["docker/mcp-servers/**"],
      "automerge": false
    }
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "timezone": "UTC",
  "labels": ["renovate"]
}
