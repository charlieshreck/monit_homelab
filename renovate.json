{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard - Monitoring Cluster",
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "platformAutomerge": true,
  "packageRules": [
    {
      "description": "Auto-merge patch and minor updates",
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      "description": "Require review for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update"]
    },
    {
      "description": "Group monitoring platform updates",
      "matchManagers": ["kubernetes"],
      "matchPaths": ["kubernetes/platform/**"],
      "groupName": "monitoring-platform"
    },
    {
      "description": "Group Terraform updates",
      "matchManagers": ["terraform"],
      "groupName": "terraform"
    },
    {
      "description": "Group Ansible updates",
      "matchManagers": ["ansible", "ansible-galaxy"],
      "groupName": "ansible"
    }
  ],
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "timezone": "UTC",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 0,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "rebaseWhen": "behind-base-branch",
  "labels": ["dependencies", "renovate"],
  "assignees": ["@charlieshreck"]
}
