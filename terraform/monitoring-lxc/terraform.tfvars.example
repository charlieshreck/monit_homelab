# ============================================================================
# Terraform Variables Template - K3s Monitoring Cluster
# ============================================================================
# Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to git (it's in .gitignore)
#
# Alternatively, use environment variables:
# export TF_VAR_monitoring_proxmox_password="your-password"
# ============================================================================

# ============================================================================
# Production Proxmox (Ruapehu) - Reference Only
# ============================================================================
# These are for reference/cross-cluster operations
# Can also be set via environment variables (recommended)

# production_proxmox_password = "your-production-proxmox-password"

# ============================================================================
# Monitoring Proxmox (Carrick) - Active Deployment
# ============================================================================
# REQUIRED: Set these for the monitoring Proxmox instance

monitoring_proxmox_password = "your-monitoring-proxmox-password"

# Optional: Override defaults if needed
# monitoring_proxmox_host     = "https://10.30.0.10:8006"
# monitoring_proxmox_user     = "root@pam"
# monitoring_proxmox_node     = "Carrick"
# monitoring_proxmox_storage  = "Kerrier"

# ============================================================================
# LXC Container Configuration
# ============================================================================
# Optional: Override defaults if needed

# lxc_vmid       = 200
# lxc_hostname   = "k3s-monitor"
# lxc_ip         = "10.30.0.20/24"
# lxc_cores      = 2
# lxc_memory     = 4096  # 4GB
# lxc_disk_size  = 30    # GB
# lxc_template   = "local:vztmpl/debian-13-standard_13.1-1_amd64.tar.zst"

# ============================================================================
# Network Configuration
# ============================================================================
# Optional: Override defaults if needed

# network_bridge = "vmbr0"
# gateway        = "10.30.0.1"
# dns_servers    = ["1.1.1.1", "8.8.8.8"]

# ============================================================================
# K3s Configuration
# ============================================================================
# Optional: Override defaults if needed

# k3s_version = ""  # Empty = latest stable, or specify version like "v1.28.5+k3s1"
# k3s_disable_components = ["traefik", "servicelb", "local-storage"]

# ============================================================================
# SSH Configuration
# ============================================================================
# Optional: Add your SSH public key for key-based authentication

# ssh_public_key = "ssh-ed25519 AAAAC3Nza... user@host"
# root_password  = "secure-password-for-lxc"  # Only needed if not using SSH keys
