# ============================================================================
# Terraform Variables - EXAMPLE
# ============================================================================
# Copy this file to terraform.tfvars and fill in your actual values
# NEVER commit terraform.tfvars to git!
#
# Quick setup:
#   cp terraform.tfvars.example terraform.tfvars
#   vim terraform.tfvars  # Fill in passwords
#
# Or use environment variables:
#   export TF_VAR_monitoring_proxmox_password="your_password"
#   export TF_VAR_lxc_root_password="your_lxc_password"
# ============================================================================

# REQUIRED: Monitoring Proxmox (Carrick) password
monitoring_proxmox_password = "your_carrick_proxmox_password_here"

# REQUIRED: LXC root password (used by Ansible)
lxc_root_password = "your_lxc_root_password_here"

# Optional: Uncomment to override defaults
# lxc_vmid     = 200
# lxc_hostname = "k3s-monitor"
# lxc_ip       = "10.30.0.20/24"
# lxc_cores    = 2
# lxc_memory   = 4096
# lxc_disk_size = 30
